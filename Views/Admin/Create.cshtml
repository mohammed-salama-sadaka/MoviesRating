@model MoviesRating.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<form asp-action="Create" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tailer" class="control-label"></label>
                <input asp-for="Tailer" class="form-control" />
                <span asp-validation-for="Tailer" class="text-danger"></span>
            </div>
    </div>
    <div class="col-md-4 m-4">
        <div class="form-group">

                    <label asp-for="@Model.PosterFile" style="width: 100%;"></label>
                    <img id="profilePicture" style="width:300px;height:300px; object-fit:cover" src="">

                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="@Model.PosterFile"
                           class="form-control"
                           style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="@Model.PosterFile" class="text-danger"></span>
              
        </div>
    </div>

</div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
@if (Model != null)
{
    <div class="alert alert-success">
        <strong>Added Successfully 😁</strong>  <a asp-controller="movie" asp-action="Details" asp-route-id="@Model.Id" class="alert-link">Show Details</a>
    </div>
}



@section Scripts {
     
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
