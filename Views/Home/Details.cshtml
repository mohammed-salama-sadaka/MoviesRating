@model MoviesRating.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="card mb-4">
                <p class="card-text badge bg-warning  position-absolute justify-content-end ">
                    Rating: @Model.Rate out of 10
                    <span> :  @Model.Reviews?.Count Reviews</span>
                </p>

                <img class="card-img-top" src="~/posters/@Model.PosterPath" alt="@Model.Name" height="400">
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                    <form asp-action="AddReview" asp-route-Id="@Model.Id" method="post" enctype="multipart/form-data">
                        <div class="rate py-3  mt-2">

                            <h6 class="mb-0">Rate : @Model.Name  Movie</h6>

                            <div class="rating">
                                <input type="radio" name="rating" value="10" id="10">
                                <label for="10">☆</label>
                                <input type="radio" name="rating" value="9" id="9">
                                <label for="9">☆</label>
                                <input type="radio" name="rating" value="8" id="8">
                                <label for="8">☆</label>
                                <input type="radio" name="rating" value="7" id="7">
                                <label for="7">☆</label>
                                <input type="radio" name="rating" value="6" id="6">
                                <label for="6">☆</label>
                                <input type="radio" name="rating" value="5" id="5">
                                <label for="5">☆</label>
                                <input type="radio" name="rating" value="4" id="4">
                                <label for="4">☆</label>
                                <input type="radio" name="rating" value="3" id="3">
                                <label for="3">☆</label>
                                <input type="radio" name="rating" value="2" id="2">
                                <label for="2">☆</label>
                                <input type="radio" name="rating" value="1" id="1">
                                <label for="1">☆</label>
                            </div>
                            <div class="form-floating">
                                <label for="comment">Add Comment</label>
                                <textarea class="form-control" id="comment" name="comment" placeholder="Comment goes here"></textarea>
                            </div>
                            <button class="btn btn-warning mt-2">Submit</button>
                        </div>


                    </form>
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                       Show Comments
                    </button>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
     
       
                            @foreach(var review in Model.Reviews.Reverse())
                            {
   
                                <div class="media">
                                    <div class="media-body">
                                        <p>@review.Comment</p>
                                        <h6 class="media-heading"><small><i>Posted on @review.AddDate</i></small></h6>
                                    </div>
                                </div>
                                <hr />
                            }

                        </div>
                    </div>
  
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back </a>
    </div>
</div>


