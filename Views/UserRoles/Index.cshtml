@model List<UserViewModel>
@{
	ViewData["Title"]="User Roles";

}
<h2>User Roles</h2>
<a asp-action="Create" asp-controller="UserRoles" class="btn btn-primary">Create New User</a>
<table class="table table-striped mt-3">
    <thead>
        <tr class="bg-primary text-white">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary"  asp-action="Manage" asp-route-Id="@user.UserId">Manage</a>
                    <a class="btn btn-danger" asp-action="Remove" asp-route-Id="@user.UserId">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>